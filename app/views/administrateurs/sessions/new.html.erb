
        <div id="layoutAuthentication">
            <div id="layoutAuthentication_content">
                <main>
                    <div class="container">
                        <div class="row justify-content-center">
                            <div class="col-lg-5">
                                <div class="card shadow-lg border-0 rounded-lg mt-5">
                                    <div class="card-header bg-primary text-white"><h3 class="text-center font-weight-light my-4">Connexion</h3></div>
                                    <div class="card-body">
                                        <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
                                            <div class="form-group">
                                                <%= f.label :email,class:"small mb-1" %><br />
    <%= f.email_field :email, autofocus: true, autocomplete: "email",class:"form-control py-4" %></div>
                                            <div class="form-group">
                                               <%= f.label :mot_de_passe,class:"small mb-1"%><br />
    <%= f.password_field :password, autocomplete: "current-password",class:"form-control py-4" %>
                                            </div>
                                            <div class="custom-control custom-checkbox">
                                                <% if devise_mapping.rememberable? %>
    
      <%= f.check_box :remember_me, class:"custom-control-input"  %>
      <%= f.label :se_souvenir_de_moi,class:"custom-control-label"  %>
    
  <% end %>
                                                
                                            </div>
                                            <div class="form-group d-flex align-items-center justify-content-between mt-4 mb-0"><a class="small" href="#">Mot de passe oubli√©?</a>
                                              <%= f.submit "Connexion",class:"btn btn-primary" %>
                                            </div>
                                        <% end %>
                                    </div>
                                    <div class="card-footer text-center bg-primary text-white">
                                        <div class="small">Copyright &copy; <b>YAGHIBIL</b> 2020</div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </main>
            </div>
        </div>