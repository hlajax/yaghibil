<%= link_to 'Ajouter une Entrée', new_income_path, class:"btn btn-danger mt-2" %>

<div class="table-responsive mt-4">
  <table class="table table-bordered" id="dataTable" width="100%" cellspacing="0">
  <thead>
    <tr class="bg-dark text-white">
      <th>Titre</th>
      <th>Montant</th>
      <th>Description</th>
      <th>Entrée le</th>
      <th colspan="3" class="text-center">Actions</th>
    </tr>
  </thead>

  <tbody>
    <% @incomes.each do |income| %>
      <tr>
        <td><%= income.titre %></td>
        <td><%= income.price %></td>
        <td><%= income.description %></td>
        <td><%= income.billed_at %></td>
        <td><%= link_to 'Voir', income %></td>
        <td><%= link_to 'Modifier', edit_income_path(income) %></td>
        <td><%= link_to 'Supprimer', income, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>
