<%= form_with(model: income, local: true) do |form| %>
  <% if income.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(income.errors.count, "error") %> prohibited this income from being saved:</h2>

      <ul>
      <% income.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>
  <div class="row">
    <div class="form-group col-6">
    <%= form.label :Titre %>
    <%= form.text_field :titre, class:"form-control", required: :true %>
  </div>

  <div class="form-group col-6">
    <%= form.label :Montant %>
    <%= form.number_field :price, class:"form-control", required: :true %>
  </div>
     <div class="form-group col-6">
    <%= form.label :Catégorie %>
    <%= form.collection_select :incategory_id, Incategory.all, :id, :titre, {prompt:"Sélectionner la atégorie"}, class:"form-control", required: :true %>
  </div>

   <div class="form-group col-6">
    <%= form.label :Source %>
    <%= form.collection_select :source_id, Source.all, :id, :titre, {prompt:"Sélectionner la source"}, class:"form-control", required: :true %>
  </div>

  <div class="form-group col-6">
    <%= form.label :entrée_le %>
    <%= form.datetime_select :billed_at, class:"form-control", required: :true %>
  </div>

  <div class="form-group col-12">
    <%= form.label :description %>
    <%= form.text_area :description, class:"form-control", required: :true %>
  </div>

  <div class="form-group col-4">
    <%= form.submit"Ajouter l'entrée ", class:"btn btn-success" %>
  </div>
  </div>
<% end %>
