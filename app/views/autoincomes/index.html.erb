                         <div id="layoutSidenav_content">
                <main>
                    <div class="container-fluid">
                        <h1 class="mt-4">Entrées</h1>
                        <div class="row">
                          <div class="col-lg-12 col-12">
<p id="notice"><%= notice %></p>
<div class="card bg-success text-white mb-4">
                                    <div class="card-body">
                                      <div>
  <h3>Total de entrées du mois: <b><%= Autoincome.total_for_current_month %> XFA</b>.</h3>
</div>

                                    </div>
                                    <div class="card-footer d-none align-items-center justify-content-between">
                                      <%= link_to "Bilan", statistics_path, class:"small text-white stretched-link" %>
                                        
                                        <div class="small text-white"><i class="fas fa-angle-right"></i></div>
                                    </div>
                                </div>

<%= link_to 'Nouvelle entrée', new_autoincome_path, class:"btn btn-success" %>
<div class="table-responsive mt-4">
<table class="table table-bordered" id="dataTable" width="100%" cellspacing="0">
  <thead>
    <tr class="bg-dark text-white">
      <th>Prix</th>
      <th>Description</th>
      <th>Véhicule</th>
      <th>Designation</th>
      <th>Vendu le</th>
      <th colspan="3" class="text-center">Actions</th>
    </tr>
  </thead>

  <tbody>
    <% @autoincomes.each do |autoincome| %>
      <tr>
        <td><%= autoincome.price %></td>
        <td><%= autoincome.description %></td>
        <td><%= autoincome.automobile.marque %> <%= autoincome.automobile.modele %></td>
        <td><%= autoincome.designation %></td>
        <td><%= autoincome.billed_at %></td>
        <td><%= link_to 'Voir', autoincome %></td>
        <td><%= link_to 'Modifier', edit_autoincome_path(autoincome) %></td>
        <td><%= link_to 'Supprimer', autoincome, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>
</div>
<br>


</div>
                        </div>
                    </div>
