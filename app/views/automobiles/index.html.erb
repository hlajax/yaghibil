   <%=render 'menus/top'%>
        <div id="layoutSidenav">
            <%=render 'menus/side'%>
                         <div id="layoutSidenav_content">
                <main>
                    <div class="container-fluid">
                        <h1 class="mt-4">Automobiles</h1>
                        <%= link_to 'Ajouter une Automobile', new_automobile_path, class:"btn btn-success mt-2" %>
                        <div class="row">
                          <div class="col-lg-6 col-12">
<p id="notice"><%= notice %></p>
<div class="card bg-success text-white mb-4">
                                    <div class="card-body">
                                      <div>
  <h3>Automobiles disponibles: <b><%=@dispos.count%></b></h3>
</div>

                                    </div>
                                    <div class="card-footer align-items-center justify-content-between d-none">
                                      <%= link_to "Bilan", statistics_path, class:"small text-white stretched-link" %>
                                        
                                        <div class="small text-white"><i class="fas fa-angle-right"></i></div>
                                    </div>
                                </div>

<div class="table-responsive mt-2">
<table class="table table-bordered" id="dataTable" width="100%" cellspacing="0">
  <thead>
    <tr class="bg-dark text-white text-center">
      <th>Marque</th>
      <th>Modele</th>
      <th>Prix</th>
      <th colspan="3">Actions</th>
    </tr>
  </thead>
  <tbody>
    <% @dispos.each do |automobile| %>
      <tr>
        <td><%= automobile.marque %></td>
        <td><%= automobile.modele %></td>
        <td><%= automobile.prix.to_i %></td>
        <td><%= link_to 'Voir', automobile %></td>
        <td><%= link_to 'Vendre', edit_automobile_path(automobile) %></td>
        <td><%= link_to 'Supprimer', automobile, method: :delete, data: { confirm: 'Êtes-vous sûr?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>
</div>
                        </div>
                        <div class="col-lg-6 col-12">
<p id="notice"><%= notice %></p>
<div class="card bg-danger text-white mb-4">
                                    <div class="card-body">
                                      <div>
  <h3>Automobiles vendues: <b><%=@vendus.count%></b></h3>
</div>

                                    </div>
                                    <div class="card-footer d-none align-items-center justify-content-between">
                                      <%= link_to "Bilan", statistics_path, class:"small text-white stretched-link" %>
                                        
                                        <div class="small text-white"><i class="fas fa-angle-right"></i></div>
                                    </div>
                                </div>

<div class="table-responsive mt-2">
<table class="table table-bordered" id="dataTable" width="100%" cellspacing="0">
  <thead>
    <tr class="bg-dark text-white text-center">
      <th>Marque</th>
      <th>Modele</th>
      <th>Prix</th>
      <th colspan="2">Actions</th>
    </tr>
  </thead>
  <tbody>
    <% @vendus.each do |automobile| %>
      <tr>
        <td><%= automobile.marque %></td>
        <td><%= automobile.modele %></td>
        <td><%= automobile.prix.to_i %></td>
        <td><%= link_to 'Voir', automobile %></td>
        <td><%= link_to 'Supprimer', automobile, method: :delete, data: { confirm: 'Êtes-vous sûr?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>
</div>
                        </div>
                    </div>
                </main>
               <footer class="py-4 bg-light mt-auto">
                    <div class="container-fluid">
                        <div class="d-flex align-items-center justify-content-between small">
                            <div class="text-muted">Copyright &copy; <b>OW Technology</b> 2020</div>
                         
                        </div>
                    </div>
                </footer>
            </div>
           
        </div>