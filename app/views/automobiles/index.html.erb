                <main>
                    <div class="container-fluid">
<p id="notice"><%= notice %></p>

<h1>Automobiles</h1>
<%= link_to 'Ajouter une Automobile', new_automobile_path, class:"btn btn-primary mt-2" %>
<div class="table-responsive mt-2">
<table class="table table-bordered" id="dataTable" width="100%" cellspacing="0">
  <thead>
    <tr class="bg-dark text-white text-center">
      <th>Marque</th>
      <th>Modele</th>
      <th>Couleur</th>
      <th>Matricule</th>
      <th>Prix</th>
      <th colspan="3">Actions</th>
    </tr>
  </thead>

  <tbody>
    <% @automobiles.each do |automobile| %>
      <tr>
        <td><%= automobile.marque %></td>
        <td><%= automobile.modele %></td>
        <td><%= automobile.couleur %></td>
        <td><%= automobile.matricule %></td>
        <td><%= automobile.prix %></td>
        <td><%= link_to 'Voir', automobile %></td>
        <td><%= link_to 'Modifier', edit_automobile_path(automobile) %></td>
        <td><%= link_to 'Supprimer', automobile, method: :delete, data: { confirm: 'Êtes-vous sûr?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>
</div>


                    </div>
