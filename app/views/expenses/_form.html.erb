<%= form_with(model: expense, local: true) do |form| %>
  <% if expense.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(expense.errors.count, "error") %> prohibited this expense from being saved:</h2>

      <ul>
      <% expense.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>
  <div class="row">
        <div class="form-group col-6">
    <%= form.label :titre %>
    <%= form.text_field :titre, id: :titre, class:"form-control", required: :true %>
  </div>
  <div class="form-group col-6">
    <%= form.label :Montant %>
    <%= form.number_field :price, id: :expense_price, class:"form-control", required: :true %>
  </div>

   <div class="form-group col-6">
    <%= form.label :catégorie %>
    <%= form.collection_select :category_id, Category.all, :id, :titre, {prompt:"Sélectionner la catégorie"} , class:"form-control", required: :true %>
  </div>

   <div class="form-group col-6">
    <%= form.label :source %>
    <%= form.collection_select :source_id, Source.all, :id, :titre, {prompt:"Sélectionner la source"}, class:"form-control", required: :true %>
  </div>


  <div class='form-group col-12' id='datetimepicker1'>
    <%= form.label :dépensé_le %>
    <%= form.datetime_select :billed_at, id: :expense_billed_at, class:"form-control", required: :true %>
    <span class="input-group-addon">
        <span class="glyphicon glyphicon-calendar"></span>
    </span>
  </div>

   <div class="form-group col-12">
    <%= form.label :description %>
    <%= form.text_area :description, id: :expense_description, class:"form-control", required: :true %>
  </div>

  <div class="form-group col-4">
    <%= form.submit "Ajouter la dépense", class:"btn btn-success" %>
  </div>
  </div>
<% end %>
